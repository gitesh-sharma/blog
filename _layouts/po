<script>
function sharePost() {
  const data = {
    title: document.title,
    text: "{{ page.title }}",
    url: window.location.href
  };
  if (navigator.share) {
    navigator.share(data);
  } else {
    navigator.clipboard.writeText(data.url);
    alert("Link copied!");
  }
}
</script>

